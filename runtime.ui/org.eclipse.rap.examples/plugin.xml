<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.rap.ui.entrypoint">
      <entrypoint
            class="org.eclipse.rap.examples.internal.Application"
            parameter="examples"
            id="org.eclipse.rap.examples.entryPoint">
      </entrypoint>
   </extension>

   <extension
         point="org.eclipse.rap.ui.branding">
      <branding
            id="org.eclipse.rap.examples.branding"
            defaultEntrypointId="org.eclipse.rap.examples.entryPoint"
            favicon="icons/favicon.png"
            servletName="examples"
            themeId="org.eclipse.rap.examples.demoTheme"
            body="html/body.html"
            title="RAP Examples">
      </branding>
   </extension>

   <extension
         point="org.eclipse.rap.ui.themes">
      <theme
            id="org.eclipse.rap.examples.demoTheme"
            file="theme/theme.css">
      </theme>
   </extension>

   <extension
         point="org.eclipse.equinox.http.registry.resources">
      <resource
            alias="/loading.gif"
            base-name="/html/loading.gif">
      </resource>
   </extension>

   <extension
         point="org.eclipse.equinox.http.registry.servlets">
      <servlet
            alias="/"
            class="org.eclipse.rap.examples.internal.RedirectServlet">
      </servlet>
   </extension>

</plugin>
